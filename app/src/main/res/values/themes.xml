<resources>
    <!-- Base application theme. -->
    <style name="Theme.Widgets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="Button">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
        <attr name="autoColorSet" format="boolean" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Chip">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoCompleteTextView">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextInputLayout">
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextViewWithSuffixPrefix">
        <attr name="android:drawableStart" />
        <attr name="android:drawableEnd" />
        <attr name="android:drawablePadding" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="fontStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="LIGHT" value="2" />
            <enum name="MEDIUM" value="3" />
        </attr>
        <attr name="suffixText" format="string" />
        <attr name="suffixTextSize" format="dimension" />
        <attr name="suffixTextColor" format="color" />
        <attr name="prefixText" format="string" />
        <attr name="prefixTextSize" format="dimension" />
        <attr name="prefixTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ErrorHandler">
        <attr name="android:text" />
        <attr name="android:src" />
    </declare-styleable>
</resources>